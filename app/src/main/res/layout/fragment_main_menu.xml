<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LocationFragment"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <ImageButton
        android:id="@+id/qr_imageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/holo_blue_light"
        app:srcCompat="@drawable/qr_ico"
        android:alpha="0.8"/>

    <ImageButton
        android:id="@+id/location_imageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:backgroundTint="@android:color/holo_blue_light"
        app:srcCompat="@drawable/location_ico"
        android:alpha="0.8"/>

    <ImageButton
        android:id="@+id/maps_imageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:backgroundTint="@android:color/holo_blue_light"
        app:srcCompat="@drawable/maps_ico"
        android:alpha="0.8"/>
</androidx.appcompat.widget.LinearLayoutCompat>